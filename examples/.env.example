# Example Environment Variables for RAGAgent
# Copy this file to .env and fill in your actual values

# LLM Configuration
LEXORA_LLM_PROVIDER=openai
LEXORA_LLM_MODEL=gpt-3.5-turbo
LEXORA_LLM_API_KEY=your-openai-api-key-here
LEXORA_LLM_TEMPERATURE=0.7
LEXORA_LLM_MAX_TOKENS=2000

# Vector Database Configuration
LEXORA_VECTORDB_PROVIDER=faiss
LEXORA_VECTORDB_EMBEDDING_MODEL=text-embedding-ada-002
LEXORA_VECTORDB_DIMENSION=1536
LEXORA_VECTORDB_CONNECTION_PARAMS={"index_path": "./faiss_index", "metric": "cosine", "openai_api_key": "your-openai-api-key-here"}

# Agent Configuration
LEXORA_AGENT_MAX_CONTEXT_LENGTH=8000
LEXORA_AGENT_MAX_TOOL_CALLS=10
LEXORA_AGENT_ENABLE_MEMORY=true
LEXORA_AGENT_LOG_LEVEL=INFO
